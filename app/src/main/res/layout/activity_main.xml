<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FDF5BE"
    android:fontFamily="@font/ubantureg">

    <!-- Title -->
    <TextView
        android:id="@+id/titleToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/ubantureg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />


    <!-- Days of the week -->
    <LinearLayout
        android:id="@+id/days_of_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/titleToday"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="16dp"
        android:gravity="center"
        android:weightSum="7"
        android:textStyle="bold">

        <!-- Sunday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/color_bg"
            android:layout_marginHorizontal="1dp">

            <TextView
                android:id="@+id/day_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:textSize="16sp"
                android:paddingVertical="10dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/date_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingVertical="4dp"
                android:paddingHorizontal="0dp"
                android:layout_marginHorizontal="1dp"/>
        </LinearLayout>

        <!-- Monday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/color_bg"
            android:layout_marginHorizontal="1dp">

            <TextView
                android:id="@+id/day_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textSize="16sp"
                android:paddingVertical="10dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/date_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingVertical="4dp"
                android:paddingHorizontal="0dp"
                android:layout_marginHorizontal="1dp"
               />
        </LinearLayout>

        <!-- Tuesday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/color_bg"
            android:layout_marginHorizontal="1dp">

            <TextView
                android:id="@+id/day_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textSize="16sp"

                android:paddingVertical="10dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/date_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingVertical="4dp"
                android:paddingHorizontal="0dp"
                android:layout_marginHorizontal="1dp" />
        </LinearLayout>

        <!-- Wednesday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/color_bg"
            android:layout_marginHorizontal="1dp">

            <TextView
                android:id="@+id/day_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textSize="16sp"

                android:paddingVertical="10dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/date_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingVertical="4dp"
                android:paddingHorizontal="0dp"
                android:layout_marginHorizontal="1dp"
                />
        </LinearLayout>

        <!-- Thursday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/color_bg"
            android:layout_marginHorizontal="1dp">

            <TextView
                android:id="@+id/day_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:textSize="16sp"

                android:paddingVertical="10dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/date_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingVertical="4dp"
                android:paddingHorizontal="0dp"
                android:layout_marginHorizontal="1dp"
                />
        </LinearLayout>

        <!-- Friday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/color_bg"
            android:layout_marginHorizontal="1dp">

            <TextView
                android:id="@+id/day_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textSize="16sp"

                android:paddingVertical="10dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/date_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingVertical="4dp"
                android:paddingHorizontal="0dp"
                android:layout_marginHorizontal="1dp"/>
        </LinearLayout>

        <!-- Saturday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/color_bg"
            android:layout_marginHorizontal="1dp">

            <TextView
                android:id="@+id/day_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textSize="16sp"
                android:paddingVertical="10dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/date_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingVertical="4dp"
                android:paddingHorizontal="0dp"
                android:layout_marginHorizontal="1dp" />
        </LinearLayout>

    </LinearLayout>


    <!-- Task area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:fontFamily="@font/ubantureg"
        android:layout_below="@id/days_of_week"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/rounded_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Task"
                android:fontFamily="@font/ubantureg"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/taskContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textColor="@android:color/black"
                android:background="@android:color/white">
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <!-- Floating action button -->
    <Button
        android:id="@+id/fab"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#F5B62E"
        android:contentDescription="Add Task"
        android:gravity="center"
        android:padding="7dp"
        android:text="+"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

</RelativeLayout>