<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5BE"
    android:padding="16dp"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/bee_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/bee_start" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bee_image"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="BeeEfficient"
        android:fontFamily="@font/ubantureg"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track It, Tackle It, Achieve It"
        android:fontFamily="@font/ubantureg"
        android:textSize="18sp"
        android:textColor="#898989"
        android:layout_below="@id/app_name"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true" />

    <!-- Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/slogan"
        android:layout_marginTop="28dp"
        android:text="Start"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="#232323"
        android:fontFamily="@font/ubantureg"
        android:paddingVertical="8dp"
        android:textColor="#FFFFFF" />
</RelativeLayout>
